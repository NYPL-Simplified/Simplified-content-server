#!/usr/bin/env python
"""Use Gutenberg Illustrated to generate covers and upload them to S3."""
import os
import sys
bin_dir = os.path.split(__file__)[0]
package_dir = os.path.join(bin_dir, "..", "..")
sys.path.append(os.path.abspath(package_dir))
from content.core.scripts import RunCoverageProviderScript
from content.coverage import GutenbergIllustratedCoverageProvider
RunCoverageProviderScript(GutenbergIllustratedCoverageProvider).run()
