#!/usr/bin/env python
"""Update the content server with new books from unglue.it."""
import os
import sys
bin_dir = os.path.split(__file__)[0]
package_dir = os.path.join(bin_dir, "..")
sys.path.append(os.path.abspath(package_dir))

from core.opds_import import OPDSImporterWithS3Mirror
from core.model import DataSource

from scripts import OPDSImportScript
from unglueit import UnglueItImporter

OPDSImportScript(
    UnglueItImporter,
    DataSource.UNGLUE_IT,
).run()
